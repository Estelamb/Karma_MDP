<?xml version="1.0" encoding="utf-8"?>
<!--!
    \file activity_map.xml
    \brief Layout for the Map screen.

    \details
    This layout displays a loading message and progress bar while the map is being initialized.
    Once loaded, a SupportMapFragment inside a FragmentContainerView shows the interactive map.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapActivity">

    <!--! Text indicating that the map is loading -->
    <TextView
        android:id="@+id/loadingmap"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="150sp"
        android:gravity="center"
        android:text="Loading map"
        android:textSize="28sp"
        android:visibility="visible" />

    <!--! Progress bar shown during map initialization -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:scrollbarSize="10dp"
        android:visibility="visible" />

    <!--! Container hosting the Google Maps fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:visibility="visible"
        tools:context=".MapsActivity" />
</LinearLayout>
