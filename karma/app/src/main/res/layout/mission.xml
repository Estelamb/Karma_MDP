<?xml version="1.0" encoding="utf-8"?>
<!--!
    \file mission.xml
    \brief Layout for a single mission item in a list.

    \details
    This layout uses a CardView to display mission information neatly.
    Each item includes an image, a title, and a subtitle showing the karma points.
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="6dp"
    android:layout_margin="6dp">

    <!--! Horizontal container holding the image and text section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!--! Mission image shown on the left -->
        <ImageView
            android:id="@+id/missionImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_launcher_foreground" />

        <!--! Vertical column containing mission title and subtitle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--! Mission title displayed in bold -->
            <TextView
                android:id="@+id/missionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission Title"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!--! Subtitle showing mission karma points -->
            <TextView
                android:id="@+id/missionSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karma points"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
