<?xml version="1.0" encoding="utf-8"?>
<!--!
    \file activity_profile.xml
    \brief Layout for the Profile screen.

    \details
    This layout is divided into two columns using a horizontal LinearLayout.
    The left column contains user profile information and a mission list.
    The right column displays a line chart representing step data.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context=".ProfileActivity">

    <!--! Left column: profile info and missions list -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="10dp">

        <!--! Profile section title -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Profile:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--! User name and profile label -->
        <TextView
            android:id="@+id/NameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Usuario Profile:"
            android:textSize="20sp" />

        <!--! User's karma points -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="0 Karma points"
            android:textSize="18sp" />

        <!--! Button to remove a selected mission or profile item -->
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Remove Selection" />

        <!--! Title for the missions list -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your missions:"
            android:textSize="18sp" />

        <!--! RecyclerView listing the user's missions -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!--! Right column: step chart -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <!--! Title for the line chart -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step Chart"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="10dp" />

        <!--! Line chart showing step progression over time -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
